
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="libelle">Libelle</label>
    <div class="col-sm-8">
        <input autofocus class="form-control" name="libelle" value="<%= produit.libelle %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="prix">Prix</label>
    <div class="col-sm-7">
        <input class="form-control" name="prix" value="<%= produit.prix %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="prix">Categorie</label>
    <div class="col-sm-10">   
        <select name="categorie">
        <% for (const c of cat) { %>

            <optgroup label="<%= c.nom %>" >
                <% for (const s of scat) { 
                    if(s.nom === c.nom){
                        if(s.snom === produit.categorie){
                    %>
                        <option selected="selected" value = "<%= s.snom %>"><%= s.snom %></option>
                    <% } else{%>
                        <option value = "<%= s.snom %>"><%= s.snom %></option>
                <% }}} %>
            </optgroup>
        <% } %>
        </select>
    </div>

</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="prix">Image</label>
    <div class="col-sm-7">
        <input type="file" class="form-control" name="file" value="<%= produit.img %>" />
    </div>
</div>
